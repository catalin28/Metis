# Environment Configuration for Metis

# API Keys
FMP_API_KEY=your_financialmodelingprep_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/metis
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/metis_test

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration
OPENAI_PROJECT_ID=your_openai_project_id
COMPETITIVE_INTEL_ASSISTANT_ID=asst_your_assistant_id
LINGUISTIC_ANALYSIS_ASSISTANT_ID=asst_your_linguistic_assistant_id

# Competitive Intelligence Settings
COMPETITIVE_INTELLIGENCE_ENABLED=true
MAX_PEERS_PER_ANALYSIS=5
MIN_MARKET_CAP_RATIO=0.3
MAX_MARKET_CAP_RATIO=3.0
PARALLEL_COMPANY_LIMIT=6
COMPETITIVE_REPORT_TIMEOUT=600

# LLM Configuration
LLM_RESPONSE_CACHE_ENABLED=true
LLM_CACHE_TTL_DAYS=90
TOKEN_BUDGET_PER_CLIENT_MONTHLY=500000

# Storage Configuration
STORE_COMPARATIVE_HISTORY=true
HISTORY_RETENTION_MONTHS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security
SECRET_KEY=your_secret_key_for_jwt_tokens
API_KEY_HEADER=X-API-Key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development Settings
DEBUG=false
TESTING=false

# WordPress Integration (optional)
WORDPRESS_API_URL=https://your-blog.com/wp-json/wp/v2
WORDPRESS_USERNAME=your_username
WORDPRESS_APP_PASSWORD=your_app_password

# Monitoring and Observability
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_BURST=20